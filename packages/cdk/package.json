{
  "name": "cdk",
  "version": "0.1.0",
  "scripts": {
    "cdk-synth": "cdk synth ${CDK_STACK_NAME} --output ../../cdk.out --quiet --app \"npm run tsx -- bin/${CDK_APP_NAME}.ts\"",
    "cdk-diff": "cdk diff --app \"npm run tsx -- bin/${CDK_APP_NAME}.ts\"",
    "cdk-deploy": "cdk deploy ${CDK_STACK_NAME} --app \"npm run tsx -- bin/${CDK_APP_NAME}.ts\" --ci true --require-approval ${REQUIRE_APPROVAL}",
    "cdk-watch": "cdk deploy --app \"npm run tsx -- bin/${CDK_APP_NAME}.ts\" --watch --all --ci true --require-approval ${REQUIRE_APPROVAL}",
    "lint": "eslint  --max-warnings 0 --fix --config ../../eslint.config.mjs .",
    "tsx": "tsx"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-python-alpha": "^2.205.0-alpha.0",
    "@cdklabs/generative-ai-cdk-constructs": "^0.1.314",
    "@nhsdigital/eps-cdk-constructs": "^1.1.5",
    "aws-cdk-lib": "^2.236.0",
    "cdk-nag": "^2.37.55",
    "constructs": "^10.4.5",
    "source-map-support": "^0.5.21",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "aws-cdk": "^2.1101.0"
  }
}
